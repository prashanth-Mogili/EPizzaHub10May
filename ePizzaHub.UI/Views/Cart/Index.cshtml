@model ePizzaHub.Models.CartModel

@{
    ViewData["Title"] = "Index";
}

@if(Model != null && Model.Items.Count > 0)
{
    <div class="row">
        <div class="col-sm-8">
            <div class="card">
            <h2>Cart (@Model.Items.Count() Items) </h2>
            <hr/>
            <div class="card-body">
                @foreach(var item in Model.Items)
                {                
                    <div class="row">
                        <div class="col-sm-2">
                            <img src="@item.ImageUrl" class="img-fluid"/>
                        </div>
                         <div class="col-sm-6">
                             <h4>@item.Name</h4>
                             <p>₹@item.UnitPrice.ToString("##.#")</p>
                        </div>
                         <div class="col-sm-4">
                             <div class="input-group">
                                <button class="btn btn-primary" onclick="UpdateCart('@item.Id','@item.Quantity',-1)">-</button>
                                <input type="text" class="form-control text-center" value="@item.Quantity" readonly/>
                                    <button class="btn btn-primary" onclick="UpdateCart('@item.Id','@item.Quantity',1)">+</button>
                             </div>
                        </div>
                    </div>
                    <hr/>
                }
            </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <h2>Order Summary</h2>            
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            Amount
                            <span>₹@Model.Total</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            Tax (5%)
                            <span>+₹@Model.Tax</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <strong>Total Amount</strong>
                            <span><strong>₹@Model.GrandTotal</strong></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>Your Cart is Empty</h2>
            </div>
        </div> I
    </div>
}

