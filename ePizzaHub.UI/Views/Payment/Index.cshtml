@model ePizzaHub.Models.PaymentModel

@{
    ViewData["Title"] = "Index";
}

@if (Model != null && Model.Cart.Items.Count > 0)
{
    <div class="row mt-5">
        <div class="col-sm-8">
            <div class="card">
                <h3>Order (@Model.Cart.Items.Count() Items) </h3>
                <hr />
                <div class="card-body">
                    @foreach (var item in Model.Cart.Items)
                    {
                        <div class="row">
                            <div class="col-sm-2">
                                <img src="@item.ImageUrl" class="img-fluid" />
                            </div>
                            <div class="col-sm-6">
                                <h4>@item.Name</h4>
                                <p>₹@item.UnitPrice.ToString("##.#")</p>
                            </div>
                           
                            
                        </div>

                        @if (item != Model.Cart.Items.Last())
                        {
                            <hr />
                        }



                    }
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <h3>Order Summary</h3>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            Amount
                            <span>₹@Model.Cart.Total</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            Tax (5%)
                            <span>+₹@Model.Cart.Tax</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <strong>Total Amount</strong>
                            <span><strong>₹@Model.Cart.GrandTotal</strong></span>
                        </li>
                    </ul>

                    <a  class="btn btn-primary" asp-route-returnUrl="/Cart/Index">Pay Now</a>
                    
                </div>
            </div>
        </div>
    </div>
}
